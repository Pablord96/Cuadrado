<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/cuadrado"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#FF0000" />

    <Button
        android:id="@+id/buttonArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cuadrado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Arriba" />

    <Button
        android:id="@+id/buttonAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonArriba"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Abajo" />

    <Button
        android:id="@+id/buttonIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cuadrado"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/buttonArriba"
        android:text="Izquierda" />

    <Button
        android:id="@+id/buttonDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cuadrado"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/buttonArriba"
        android:text="Derecha" />

    <Button
        android:id="@+id/buttonAumentarTamanio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonIzquierda"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Aumentar TamaÃ±o" />

    <Button
        android:id="@+id/buttonDisminuirTamanio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDerecha"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/buttonAumentarTamanio"
        android:text="Disminuir Tamanio" />

    <Button
        android:id="@+id/buttonCambiarColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAumentarTamanio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Cambiar Color" />
</RelativeLayout>